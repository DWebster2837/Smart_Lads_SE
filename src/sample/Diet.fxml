<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TabPane prefHeight="766.0" prefWidth="624.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.DietController">
   <tabs>
      <Tab text="Add Food">
         <content>
            <VBox fx:id="layout" prefHeight="95.0" prefWidth="624.0">
               <HBox prefHeight="115.0" prefWidth="416.0">
                  <children>
                      <ButtonBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="115.0" prefWidth="433.0">
                        <buttons>
                            <ChoiceBox fx:id="foodSelect" prefWidth="150.0" />
                            <ChoiceBox fx:id="mealSelect" minWidth="39.0" prefHeight="25.0" prefWidth="150.0" />
                            <Button fx:id="addFoodDiary" mnemonicParsing="false" onAction="#handleAddFoodToDiet" text="Add" />
                        </buttons>
                      </ButtonBar>
                  </children>
               </HBox>
               <Label prefHeight="42.0" prefWidth="130.0" text="Add new food">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
               <HBox prefHeight="41.0" prefWidth="624.0">
                  <children>
                     <Label prefHeight="25.0" prefWidth="69.0" text="Food name" />
                     <TextField fx:id="foodInput" prefHeight="25.0" prefWidth="122.0" />
                     <Label prefHeight="25.0" prefWidth="55.0" text="   Calories" />
                     <TextField fx:id="caloriesInput" prefHeight="25.0" prefWidth="124.0" />
                     <Button fx:id="addFood" mnemonicParsing="false" onAction="#handleAddFood" text="Add" />
                  </children>
               </HBox>
               <HBox prefHeight="43.0" prefWidth="386.0" />
               <Label prefHeight="42.0" prefWidth="130.0" text="Add new meal">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
               <HBox prefHeight="43.0" prefWidth="386.0">
                  <children>
                     <Label prefHeight="25.0" prefWidth="108.0" text="Meal name" />
                     <TextField fx:id="mealInput" prefHeight="25.0" prefWidth="122.0" />
                     <Button fx:id="addMeal" mnemonicParsing="false" onAction="#handleAddMeal" text="Add" />
                  </children>
               </HBox>
            </VBox>
         </content>
      </Tab>
      <Tab text="View Diary">
         <content>
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
               <content>
                  <VBox prefHeight="695.0" prefWidth="387.0">
                     <children>
                        <Label fx:id="date" text="black" />
                        <DatePicker fx:id="datePicker" prefHeight="25.0" prefWidth="120.0" />
                        <TableView fx:id="breakfastTable" prefHeight="130.0" prefWidth="387.0" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </content>
      </Tab>
   </tabs>
</TabPane>
