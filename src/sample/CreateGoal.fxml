   <children>
      <GridPane layoutX="92.0" layoutY="183.0" prefHeight="182.0" prefWidth="150.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <RadioButton fx:id="weightRB" mnemonicParsing="false" text="Weight" GridPane.halignment="LEFT" GridPane.rowIndex="1">
               <toggleGroup>
                  <ToggleGroup fx:id="goalGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="bmiRB" mnemonicParsing="false" text="BMI" toggleGroup="$goalGroup" GridPane.rowIndex="2" />
            <RadioButton fx:id="calIntakeRB" mnemonicParsing="false" text="Calories Intake" toggleGroup="$goalGroup" GridPane.rowIndex="3" />
            <RadioButton fx:id="calBurntRB" mnemonicParsing="false" text="Calories Burnt" toggleGroup="$goalGroup" GridPane.rowIndex="4" />
            <RadioButton fx:id="walkDistRB" mnemonicParsing="false" text="Walking distance" toggleGroup="$goalGroup" GridPane.rowIndex="5" />
            <RadioButton fx:id="runDistRB" mnemonicParsing="false" text="Running distance" toggleGroup="$goalGroup" GridPane.rowIndex="6" />
            <RadioButton fx:id="swimDistRB" mnemonicParsing="false" text="Swimming distance" toggleGroup="$goalGroup" GridPane.rowIndex="7" />
            <RadioButton fx:id="stepsRB" mnemonicParsing="false" text="Steps" GridPane.rowIndex="8" />
         </children>
      </GridPane>
      <Button fx:id="selectButton" layoutX="148.0" layoutY="375.0" mnemonicParsing="false" onAction="#selectType" text="Select" />
      <DatePicker fx:id="startDP" layoutX="137.0" layoutY="83.0" />
      <Label layoutX="64.0" layoutY="87.0" text="Start:" />
      <DatePicker fx:id="endDP" layoutX="137.0" layoutY="127.0" />
      <Label layoutX="64.0" layoutY="131.0" text="End:" />
      <SplitPane fx:id="targetChooser" prefHeight="448.0" prefWidth="335.0" visible="false">
         <items>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="chosenDate" text="X Start date - Y End date">
                     <VBox.margin>
                        <Insets bottom="50.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="recommendationLB" text="Your recommended target weight is" />
                  <Label text="X">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="50.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="targetLB" text="Target weight:">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="targetTF" maxWidth="-Infinity">
                     <VBox.margin>
                        <Insets bottom="50.0" />
                     </VBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#createGoal" text="Add" />
               </children>
            </VBox>
         </items>
      </SplitPane>
      <Label layoutX="125.0" layoutY="30.0" text="Create Goal">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" layoutY="407.0" prefHeight="40.0" prefWidth="334.0">
         <children>
            <Label fx:id="errorLB" alignment="CENTER" contentDisplay="CENTER" text="Label" textFill="RED" />
         </children>
      </VBox>
   </children>
</AnchorPane>
